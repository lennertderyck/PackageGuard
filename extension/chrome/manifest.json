{
    "name": "PackageGuard",
    "description": "Embeds safety badges on npmjs.com package pages",
    "version": "1.1.1",
    "manifest_version": 3,

    "content_scripts": [
        {
            "matches": ["https://www.npmjs.com/package/*"],
            "js": ["content.js"],
            "css": ["content.css"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["badge.png"],
            "matches": ["https://www.npmjs.com/*"]
        }
    ]
}
