{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "lib": ["ES2020", "DOM"],
        "outDir": "../dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "nodenext",
        "types": []
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "../dist"]
}
